<Window x:Class="DaasAssessmentTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DaasAssessmentTool"
        mc:Ignorable="d"
        Title="HP DaaS Network Readiness Tool" Height="500" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1*" MinHeight="40"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                      Width="Auto"                   
                      Height="Auto">
            <TextBox x:Name="ConsoleOutputTextBox" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top"/>
        </ScrollViewer>
        <Button x:Name="RunTestsButton" Grid.Row="1" Click="RunTestsButton_Click">Run Tests</Button>
        <Button x:Name="SeeVerboseButton" Grid.Row="1" Grid.Column="1" Click="SeeVerboseButton_Click" IsEnabled="False" >Show Verbose Logs</Button>
    </Grid>
</Window>

<Window x:Class="DaasAssessmentTool.TestVerboseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DaasAssessmentTool"
        mc:Ignorable="d"
        Title="Verbose Log Output" Height="500" Width="500" IsVisibleChanged="Window_IsVisibleChanged">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="1*" MinHeight="40"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ScrollViewer HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                      Width="Auto"                   
                      Height="Auto">
                <TextBox x:Name="ConsoleOutputTextBox" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Text=""/>
            </ScrollViewer>
        <Button x:Name="SaveLogsButton" Grid.Row="1" Click="SaveLogsButton_Click">Save</Button>

        </Grid>
</Window>
